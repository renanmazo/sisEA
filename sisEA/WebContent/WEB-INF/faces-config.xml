<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<!-- INTERNACIONALIZAÇÃO -->
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>sisea.resource.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<!-- REGRAS DE NAVEGAÇÃO -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>IR_PARA_ESCALONAMENTO</from-outcome>
			<to-view-id>/content/escalonamento/escalonamento.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>IR_PARA_ATIVIDADE</from-outcome>
			<to-view-id>/content/atividade/atividade.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	

	<!-- BEANS -->
	<managed-bean>
		<managed-bean-name>escalonamentoBean</managed-bean-name>
		<managed-bean-class>sisea.view.escalonamento.EscalonamentoBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>atividadeBean</managed-bean-name>
		<managed-bean-class>sisea.view.atividade.AtividadeBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

</faces-config>
